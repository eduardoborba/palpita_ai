<% if @player_round_assignment.errors.any? %>
  <div class="alert alert-danger mt-2">
    <h4 class="alert-heading">Erro:</h4>

    <ul>
      <% @player_round_assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row mb-3">
  <div class="col">
    <h1>
      Palpitar

      <% if @bet_league.owner == current_player %>
        <a href="<%= edit_round_url(@round) %>">
            <%= fa_icon 'edit' %>
        </a>
      <% end %>
    </h1>

  </div>
</div>

<%= render 'form', player_round_assignment: @player_round_assignment %>
