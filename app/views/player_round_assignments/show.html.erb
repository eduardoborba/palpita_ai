<div class="row mb-3">
  <div class="col">
    <h1>
      Palpites
    </h1>
  </div>
</div>


<% @player_round_assignment.bets.joins(:game).each do |bet| %>
  <div class="row align-items-center mb-3">
    <div class="col-3 text-right">
      <%= image_tag(bet.game.home.logo_url, width: '25px') %>
      <%= bet.game.home.name %>
    </div>

    <div class="col-2 pl-0 pr-0 text-right">
      <%= bet.home_bet %>
    </div>

    <div class="col-2 d-flex justify-content-center">
      <%= fa_icon('times') %>
    </div>

    <div class="col-2 pl-0 pr-0">
      <%= bet.visitor_bet %>
    </div>

    <div class="col-3">
      <%= bet.game.visitor.name %>
      <%= image_tag(bet.game.visitor.logo_url, width: '25px') %>
    </div>
  </div>
<% end %>

<div class="row mb-3">
  <div class="col">
    <%= link_to 'Voltar', bet_league_path(@bet_league.id), class: 'btn btn-light btn-lg btn-block' %>
  </div>
</div>
